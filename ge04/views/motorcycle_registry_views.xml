<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="motorcycle_registry_form_inherit_repair_order" model="ir.ui.view">
        <field name="name">motorcycle.registry.form.inherit.repair.order</field>
        <field name="model">motorcycle.registry</field>
        <field name="inherit_id" ref="motorcycle_registry.motorcycle_registry_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet//field[@name='picture']" position="before">
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_repair_order"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-wrench"
                        attrs="{'invisible': [('repair_order_count', '=', 0)]}"
                    >
                        <field name="repair_order_count" widget="statinfo" string="Repairs" />
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>